    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <!--<item name="android:windowCloseOnTouchOutside">false</item>-->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="MaterialOutlinedIconButton" parent="Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="android:paddingStart">@dimen/_13sdp</item>
        <item name="android:paddingEnd">@dimen/_13sdp</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="android:layout_marginStart">@dimen/_5sdp</item>
        <item name="android:layout_marginEnd">@dimen/_5sdp</item>
        <item name="android:fontFamily">@font/hurmesemibold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/regular_text</item>
        <item name="cornerRadius">@dimen/_6sdp</item>
        <item name="backgroundTint">@color/colorOnPrimary</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">10dp</item>
        <item name="android:elevation">0dp</item>

    </style>


    <!--DatePickerDialog and DateTimePickerDialog styles - - - - - - - - - - - - -->
    <style name="dialog_picker_statements" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorNeutral</item>
        <item name="colorControlActivated">@color/colorNeutral</item>
    </style>

    <style name="datepicker" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:buttonBarNegativeButtonStyle">
            @style/DatePickerTheme.ButtonBarNegativeButtonStyle
        </item>
        <item name="android:buttonBarPositiveButtonStyle">
            @style/DatePickerTheme.ButtonBarPositiveButtonStyle
        </item>
        <item name="windowMinWidthMinor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:datePickerStyle">@style/myDatePickerStyle</item>

    </style>

    <style name="dialog_picker" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorGrayDark</item>
        <item name="colorControlActivated">@color/colorNeutral</item>
    </style>

    <style name="myDatePickerStyle" parent="android:Widget.Material.DatePicker">
        <item name="android:datePickerMode">spinner</item>
    </style>

    <style name="DatePickerTheme.ButtonBarNegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="DatePickerTheme.ButtonBarPositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/grey_white</item>
        <item name="colorControlActivated">@color/star_yellow</item>
    </style>

